<% content_for(:html_title) do %>
最終確認
<% end %>

<div class="block p-6 rounded-lg shadow-lg bg-white">
  <div class="flex flex-col">
    <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="py-2 inline-block min-w-full sm:px-6 lg:px-8">
        <div class="overflow-hidden">
          <table class="min-w-full">
            <tbody>
              <tr class="border-b">
                <th class="px-6 py-5 whitespace-nowrap text-sm font-medium text-gray-900">アーティスト名</th>
                <td class="text-sm text-gray-900 font-light px-6 py-5 whitespace-nowrap">
                  <%= @name %>
                </td>
              </tr>
              <tr class="border-b">
                <th class="px-6 py-5 whitespace-nowrap text-sm font-medium text-gray-900">Spotify ID</th>
                <td class="text-sm text-gray-900 font-light px-6 py-5 whitespace-nowrap">
                  <%= @spotify_id %>
                </td>
              </tr>
              <tr class="border-b">
                <th class="px-6 py-5 whitespace-nowrap text-sm font-medium text-gray-900">Spotify URL</th>
                <td class="text-sm text-gray-900 font-light px-6 py-5 whitespace-nowrap">
                  <%= @spotify_url %>
                </td>
              </tr>
              <tr align="center">
                <th class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
                  <% if @image.present? %>
                  <%= image_tag @image, class: 'w-1/2' %>
                  <% else %>
                  <%= image_tag 'no-image.jpg', class: 'w-1/2' %>
                  <% end %>
                </th>
                <td>
                  <%= form_with url: user_artists_path(@user_id) do %>
                  <%= hidden_field_tag :name, @name %>
                  <%= hidden_field_tag :spotify_id, @spotify_id %>
                  <%= hidden_field_tag :image, @image %>
                  <%= hidden_field_tag :spotify_url, @spotify_url %>
                  <%= hidden_field_tag :genre, @genre %>
                  <%= button_tag '登録する', type: 'submit', class: 'inline-block px-6 py-2.5 bg-green-500 text-white font-medium leading-tight uppercase rounded-full shadow-md hover:bg-green-600 hover:shadow-lg focus:bg-green-600 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-green-700 active:shadow-lg transition duration-150 ease-in-out' %>
                  <% end %>
                  <%= link_to 'キャンセル', root_path, class: 'submit', class: 'inline-block px-6 py-2.5 bg-yellow-500 text-white font-medium leading-tight uppercase rounded-full shadow-md hover:bg-yellow-600 hover:shadow-lg focus:bg-yellow-600 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-yellow-700 active:shadow-lg transition duration-150 ease-in-out mt-4' %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

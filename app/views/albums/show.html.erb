<% content_for(:html_title) do %>
<%= @album.name %> 詳細ページ
<% end %>

<div class="container mx-auto my-36">
  <div>
    <div class="bg-white relative shadow rounded-lg w-5/6 mx-auto pb-5">
      <div class="flex justify-center">
        <% if @album.image.present? %>
        <%= image_tag @album.image, class: 'rounded-full mx-auto absolute -top-20 w-32 h-32 shadow-md border-4 border-white transition duration-200 transform hover:scale-110' %>
        <% else %>
        <%= image_tag 'no-image.jpg', class: 'rounded-full mx-auto absolute -top-20 w-32 h-32 shadow-md border-4 border-white transition duration-200 transform hover:scale-110' %>
        <% end %>
      </div>
      <div class="mt-16">
        <h1 class="font-bold text-center text-3xl text-gray-900"><%= @album.name %></h1>
        <p class="text-center text-sm text-gray-400 font-medium mt-2"><%= link_to 'spotifyページへ移動', @album.spotify_url, class: 'text-my-blue underline' %></p>

        <div class="w-full mt-5">
          <h3 class="font-medium text-gray-900 text-left px-6">Details</h3>
          <div class="mt-5 w-full flex flex-col items-center overflow-hidden text-sm">
            <div class="flex w-full flex justify-start items-center gap-5 px-4">
              <img src="https://scontent.fotp3-1.fna.fbcdn.net/v/t1.6435-9/175889300_2909358829319917_899035180950984171_n.jpg?_nc_cat=107&ccb=1-5&_nc_sid=09cbfe&_nc_ohc=MaOc2WiX9w0AX_xiqmh&_nc_ht=scontent.fotp3-1.fna&oh=00_AT85mEIpqHX5yThEAWoCZCt2PAnO-SS4M0yKFm9Cjti2zg&oe=628D39CC" alt="" class="rounded-full h-6 shadow-md inline-block mr-2">
              リリース日
              <span class="text-gray-500 text-xs"><%= @result.release_date %></span>
            </div>

            <div class="flex w-full flex justify-start items-center gap-5 mt-5 px-4">
              <img src="https://scontent.fotp3-1.fna.fbcdn.net/v/t1.6435-9/175889300_2909358829319917_899035180950984171_n.jpg?_nc_cat=107&ccb=1-5&_nc_sid=09cbfe&_nc_ohc=MaOc2WiX9w0AX_xiqmh&_nc_ht=scontent.fotp3-1.fna&oh=00_AT85mEIpqHX5yThEAWoCZCt2PAnO-SS4M0yKFm9Cjti2zg&oe=628D39CC" alt="" class="rounded-full h-6 shadow-md inline-block mr-2">
              レーベル
              <span class="text-gray-500 text-xs"><%= @result.label %></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

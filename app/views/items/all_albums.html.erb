<% content_for(:html_title) do %>
登録アルバム一覧
<% end %>

<% if @albums.any? %>
<% @albums.each do |album| %>
<%= link_to album_params_path(album.id) do %>
<div class="flex justify-center h-40 mt-5">
  <div class="flex flex-col md:flex-row rounded-lg bg-white shadow-lg w-2/3">
    <%= image_tag album.image, class: 'w-1/3 h-auto object-cover rounded-t-lg md:rounded-none md:rounded-l-lg' %>
    <div class="w-2/3 p-4 flex flex-col justify-start">
      <h5 class="text-gray-900 text-xl font-medium mb-2"><%= album.name %></h5>
      <p class="text-gray-600 text-xs"><%= album.format_type %></p>
      <p class="text-gray-600 text-xs text-right"><%= album.user.name %>さんが登録</p>
    </div>
  </div>
</div>
<% end %>
<% end %>
<% else %>
<p>登録アーティストはありません</p>
<% end %>
<%= paginate @albums %>
